<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Community Pantries</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('partials/_navbar.ejs') %>
    <h1>Community Pantries</h1>
    <ul>
        <% users.forEach(user => { %>
            <li>
                <h3><%= user.username %>'s Pantry</h3>
                <ul>
                    <% user.pantry.forEach(item => { %>
                        <li><%= item.name %> </li>
                    <% }); %>
                </ul>
                <a href="/community/pantry/<%= user._id %>">View Full Pantry</a>
            </li>
        <% }); %>
    </ul>
</body>
</html>
